{
  "env": {
    "commonjs": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:security/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/extensions",
    "plugin:promise/recommended",
    "plugin:json/recommended",
    "plugin:node/recommended"
  ],
  "plugins": ["security"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignores": ["database/**/*.cjs", "database/**/*.js"],
  "rules": {
    "eqeqeq": "error",
    "quotes": ["warn", "single"],
    "semi": "error",
    "linebreak-style": ["error", "unix"],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "indent": ["error", 2],
    "no-param-reassign": "warn",
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ]
  }
}
